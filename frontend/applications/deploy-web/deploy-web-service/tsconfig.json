{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "importHelpers": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "node_modules"
  ],
}